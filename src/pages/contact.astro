---
import Base from '../layouts/Base.astro'
import Nav from '../components/Nav.astro'
---
<Base>
  <Nav slot="nav" />
  <article class="content">
    <header>
      <h3 class="section-title">contact</h3>
    </header>
    <section>
      <p><a href="mailto:Lola_______@outlook.com">Lola_______@outlook.com</a></p>
    </section>

    <section class="instagram">
      <h3 class="section-title">instagram</h3>
      <div class="insta-widget">
        <a href="https://www.instagram.com/lolalalolalalola/" target="_blank" rel="noopener noreferrer" class="insta-profile-link">
          <div class="insta-preview">
            <div class="insta-header">
              <div class="insta-avatar">
                <svg width="56" height="56" viewBox="0 0 56 56" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <circle cx="28" cy="28" r="27" fill="#e1e1e1" stroke="#ddd" stroke-width="2"/>
                  <circle cx="28" cy="24" r="8" fill="#999"/>
                  <path d="M 14 45 Q 14 35 28 35 Q 42 35 42 45" fill="#999"/>
                </svg>
              </div>
              <div class="insta-info">
                <strong class="insta-username">@lolalalolalalola</strong>
                <div class="insta-stats">
                  <span>Posts · Followers · Following</span>
                </div>
              </div>
            </div>
            <div class="insta-cta">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <rect x="2" y="2" width="20" height="20" rx="5" stroke="currentColor" stroke-width="2"/>
                <circle cx="12" cy="12" r="4" stroke="currentColor" stroke-width="2"/>
                <circle cx="18.5" cy="5.5" r="1.5" fill="currentColor"/>
              </svg>
              <span>View Instagram Profile</span>
            </div>
          </div>
        </a>
      </div>
    </section>
  </article>
</Base>
